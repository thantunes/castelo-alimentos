{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "newsletter",
      "flex-layout.row#footer-1-desktop",
      "flex-layout.row#footer-2-desktop",
      "flex-layout.row#footer-3-desktop"
    ]
  },
  "flex-layout.row#footer-1-desktop": {
    "children": [
      "flex-layout.col#logo-footer",
      "flex-layout.col#fale-conosco",
      "flex-layout.col#institucional",
      "flex-layout.col#area-do-cliente",
    
      "flex-layout.col#funcionamento-loja-de-fabrica"
    ],
    "props": {
      "blockClass": "menu-row",
      "paddingTop": 6,
      "paddingBottom": 3
    }
  },


"newsletter":{

  "props": {
    "label":"Fique por dentro de nossas novidades e promoções em primeira mão",
    "placeholder":"Digite aqui seu e-mail",
    "submit":"Enviar"
  }
},
  


  "flex-layout.col#logo-footer": {
    "props": {
      "verticalAlign": "top"
    },
    "children": ["logo#footer","social-networks"]
  },

  "logo#footer": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "/arquivos/logo-castelo-footer-io.png",
      "width": "180",
      "height": "200"
    }
  },


  "social-networks": {
    "props": {
      "socialNetworks": [
        {
          "name": "Facebook",
          "url": "https://www.facebook.com/vtexonline/"
        },
        {
          "name": "Instagram",
          "url": "https://www.instagram.com/vtextruecloud/"
        },
        {
          "name": "Twitter",
          "url": "https://twitter.com/vtexonline"
        },
        {
          "name": "Youtube",
          "url": "https://www.youtube.com/user/VTEXTV"
        }
      ]
    }
  },


 

  "flex-layout.col#institucional": {
    "props": {
      "verticalAlign": "top"
    },
    "children": [
      "rich-text#faleconosco-footer-title",
      "vtex.menu@2.x:menu#Products"
    
    ]
  },


  "flex-layout.col#fale-conosco": {
    "props": {
      "verticalAlign": "top"
    },
    "children": [
      "rich-text#faleconosco-footer-title",
      "rich-text#atendimento",
      "rich-text#telefone",
      "rich-text#email"
    
    ]
  },

  "rich-text#faleconosco-footer-title": {
    "props": {
      "text": "Fale Conosco",
      "blockClass": "footer-fale-conosco"
    }
  },






  
  "flex-layout.col#area-do-cliente": {
    "props": {
      "verticalAlign": "top"
    },
    "children": [
      "rich-text#area-do-cliente-footer-title",
      "vtex.menu@2.x:menu#footer-clothing"
    
    ]
  },


  "rich-text#area-do-cliente-footer-title": {
    "props": {

      "text": "Área do cliente",
      "blockClass": "footer-area-do-cliente-title"
    }
  },


  "rich-text#atendimento": {
    "props": {

      "text": "Segunda à Quinta-feira 9h às 12h / 13 às 18h \n e Sexta-feira 9h às 12h / 13h às 17h",
      "blockClass": "footer-horario-de-atendimento"
    }
  },

  "rich-text#telefone": {
    "props": {
      "text": "0800 771 6111",
      "blockClass": "footer-telefone-atendimento"
    }
  },


  "rich-text#email": {
    "props": {
      "text": "lojavirtual@casteloalimentos.com.br",
      "blockClass": "footer-email-atendimento"
    }
  },


  "flex-layout.col#funcionamento-loja-de-fabrica": {
    "props": {
      "verticalAlign": "top"
    },
    "children": [
      "rich-text#funcionamento-loja-de-fabrica-footer-title",
      "rich-text#funcionamento-loja-fabrica-seg-sex",
      "rich-text#funcionamento-loja-fabrica-sabado",
      "rich-text#funcionamento-loja-fabrica-fone",
      "rich-text#funcionamento-loja-fabrica-end"
     
    
    ]
  },


  "rich-text#funcionamento-loja-de-fabrica-footer-title": {
    "props": {
      "text": "Funcionamento Loja de Fábrica",
      "blockClass": "funcionamento-loja-de-fabrica"
    }
  },



  "rich-text#funcionamento-loja-fabrica-seg-sex": {
    "props": {
      "text": "Segunda à sexta, das 8h30 às 17h45",
      "blockClass": "funcionamento-loja-de-fabrica-text"
    }
  },




  "rich-text#funcionamento-loja-fabrica-sabado": {
    "props": {
      "text": "Sábado, das 8h30 às 15h45",
      "blockClass": "funcionamento-loja-de-fabrica-text"
    }
  },






  "rich-text#funcionamento-loja-fabrica-fone": {
    "props": {
      "text": "Fone: (11) 4589-7710",
      "blockClass": "funcionamento-loja-de-fabrica-text"
    }
  },


  "rich-text#funcionamento-loja-fabrica-end": {
    "props": {
      "text": "Av. Prof.ª Maria do Carmo Guimarães \n Pellegrini, 480 - Retiro, Jundiaí - SP",
      "blockClass": "funcionamento-loja-de-fabrica-text"
    }
  },



  "flex-layout.row#footer-2-desktop": {
    "children": ["accepted-payment-methods"],
    "props": {
      "blockClass": "payment-methods"
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },

  "flex-layout.row#footer-3-desktop": {
    "children": ["rich-text#footer"],
    "props": {
      "blockClass": "credits"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "newsletter",
      "flex-layout.row#1-footer-mobile",
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "accepted-payment-methods",
      "social-networks",
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "flex-layout.row#1-footer-mobile": {
    "props": {
      "paddingTop": 4,
      "paddingBottom": 4
    },
    "children": ["vtex.menu@2.x:menu#footer-mobile"]
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "All stock and product photos are from photos.icons8.com",
      "blockClass": "footer"
    }
  }
}
